{
  "name": "culturequest-secure-signup",
  "version": "1.0.0",
  "description": "Ultra-secure signup system for CultureQuest with 10/10 security rating",
  "main": "server/secure-signup.js",
  "scripts": {
    "start": "node server/secure-signup.js",
    "dev": "nodemon server/secure-signup.js",
    "test": "npm run test:security && npm run test:unit",
    "test:security": "npm audit && npm run test:helmet",
    "test:helmet": "node scripts/test-security-headers.js",
    "test:unit": "jest",
    "security-check": "npm audit --audit-level=moderate",
    "update-deps": "npm update && npm audit fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "bcrypt": "^5.1.0",
    "validator": "^13.9.0",
    "csurf": "^1.11.0",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "mongoose": "^7.0.3",
    "speakeasy": "^2.0.0",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "security",
    "authentication",
    "signup",
    "express",
    "mongodb",
    "csrf",
    "rate-limiting",
    "helmet"
  ],
  "author": "CultureQuest Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/culturequest/secure-signup.git"
  },
  "bugs": {
    "url": "https://github.com/culturequest/secure-signup/issues"
  },
  "homepage": "https://github.com/culturequest/secure-signup#readme"
}